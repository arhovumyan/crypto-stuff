{
  "name": "solana-copy-trader",
  "version": "1.0.0",
  "description": "Solana copy trading bot with Jupiter integration",
  "private": true,
  "type": "module",
  "workspaces": [
    "services/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev -w @copytrader/listener",
    "build": "tsc --build",
    "clean": "rm -rf services/*/dist packages/*/dist",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "test": "vitest",
    "lint": "eslint . --ext .ts"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "@types/pg": "^8.10.9",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "@typescript-eslint/parser": "^6.16.0",
    "eslint": "^8.56.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  },
  "dependencies": {
    "@jup-ag/api": "^6.0.47",
    "@solana/spl-token": "^0.4.14",
    "@solana/web3.js": "^1.87.6",
    "axios": "^1.13.2",
    "bip39": "^3.1.0",
    "dotenv": "^16.3.1",
    "ed25519-hd-key": "^1.3.0",
    "pg": "^8.11.3",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.1",
    "redis": "^4.6.12",
    "ws": "^8.16.0",
    "zod": "^3.22.4"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
